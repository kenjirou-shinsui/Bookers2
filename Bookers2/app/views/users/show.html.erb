
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
     <div class="row">
         <div class="col-xs-3">
<%= render 'books/list', {bookx: @bookx, user: @user} %>
</div>


 <div class="col-xs-9">
<h2>Books</h2>




<table class="table table-hover table-inverse">
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
</thead>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to user_path(book.user.id) do %>
    <%= attachment_image_tag @user, :profile_image, :fill, 90, 90, fallback: "no_image.jpg",size:'60x60'  %></td>
    <% end %>
    <td><%= link_to book_path(book.id) do %>
    <%= book.title %></td>
    <% end %>
    <td><%= book.body %></td>
  </tr>

<% end %>
</table>
 </div>  
 </div>
</div>
